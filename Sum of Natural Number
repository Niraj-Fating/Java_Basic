import java.util.Scanner;

class Test {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter a Number :");
        int n = sc.nextInt();
        if (n < 0) {
            System.out.println("Enter valid Number its Invalid ");
            return;
        }
        System.out.println(n * (n + 1) / 2);
    }
}
